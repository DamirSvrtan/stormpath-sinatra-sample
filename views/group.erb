<h1><%= group.name %></h1>

<h4>Group Accounts</h4>

<table class="table">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
  <% group_accounts.each do |account| %>
    <tr>
      <td><%= account.username %></td>
      <td><%= account.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<h4>Custom Data Permissions</h4>
<table class="table">
  <thead>
    <tr>
      <th>Can view classified information</th>
      <th>Can delete others</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= group_custom_data.get('view_classified_info') ? "TRUE" : "FALSE" %></td>
      <td><%= group_custom_data.get('delete_others') ? "TRUE" : "FALSE" %></td>
    </tr>
  </tbody>
</table>

